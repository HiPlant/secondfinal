<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplicationex1.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment" />
        <action
            android:id="@+id/action_navigation_home_to_registerPlantFragment"
            app:destination="@id/registerPlantFragment" />
        <action
            android:id="@+id/action_navigation_home_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_navigation_home_to_myPlantDetailFragment"
            app:destination="@id/myPlantDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.myapplicationex1.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_mine"
        android:name="com.example.myapplicationex1.ui.mine.MineFragment"
        android:label="@string/title_mine"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.example.myapplicationex1.ui.home.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding" >
        <action
            android:id="@+id/action_onBoardingFragment_to_finishRegisterFragment"
            app:destination="@id/finishRegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/finishRegisterFragment"
        android:name="com.example.myapplicationex1.ui.home.FinishRegisterFragment"
        android:label="fragment_finish_register"
        tools:layout="@layout/fragment_finish_register" >
        <action
            android:id="@+id/action_finishRegisterFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/registerPlantFragment"
        android:name="com.example.myapplicationex1.ui.home.RegisterPlantFragment"
        android:label="fragment_register_plant"
        tools:layout="@layout/fragment_register_plant" >
        <action
            android:id="@+id/action_registerPlantFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.myapplicationex1.ui.home.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_registerPlantFragment"
            app:destination="@id/registerPlantFragment" />
    </fragment>
    <fragment
        android:id="@+id/myPlantDetailFragment"
        android:name="com.example.myapplicationex1.ui.home.MyPlantDetailFragment"
        android:label="fragment_my_plant_detail"
        tools:layout="@layout/fragment_my_plant_detail" >
        <action
            android:id="@+id/action_myPlantDetailFragment_to_wateringFragment"
            app:destination="@id/wateringFragment" />
    </fragment>
    <fragment
        android:id="@+id/wateringFragment"
        android:name="com.example.myapplicationex1.ui.home.WateringFragment"
        android:label="fragment_watering"
        tools:layout="@layout/fragment_watering" >
        <action
            android:id="@+id/action_wateringFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
</navigation>