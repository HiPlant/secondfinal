<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mine.MineFragment"
    android:id="@+id/mine">

    <TextView
        android:id="@+id/mine_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginRight="24dp"
        />

    <ImageView
        android:id="@+id/mine_profile_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/mine_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine_profile"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/mine_profile_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine_profile_img"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        android:textColor="#000000"
        android:text="Seongjae Bae"
        />
    <TextView
        android:id="@+id/mine_profile_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine_profile_txt1"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="#80363942"
        android:text="qotjdwo7151@konkuk.ac.kr"
        />

    <TextView
        android:id="@+id/mine_profile_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine_profile_txt2"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="12"
        />
    <TextView
        android:id="@+id/mine_profile_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine_profile_txt3"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#80363942"
        android:text="키우는 식물"
        />

    <TextView
        android:id="@+id/mine_profile_txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine_profile_txt4"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"
        android:textColor="#595085"
        android:text="키우는 식물 종류 : "
        />

</androidx.constraintlayout.widget.ConstraintLayout>